<ul id="messages"></ul>
<script>
  var socket = io();
  var object = { 
     name : null,
     message : null,
  };
	$("#merg").submit(function()
           object.name = $("#name").val();
           object.message  = $("#m").val();
		socket.emit('chat message', object);
